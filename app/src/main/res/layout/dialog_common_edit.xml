<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="286dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/shape_common_bg_dialog"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_dialog_text_bg"
        android:gravity="center"
        android:text="WiFi上网密码"
        android:textColor="@color/common_text_white"
        android:layout_marginBottom="15dp"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_dialog_et_common_bg"
        android:hint="请输入设备上的WiFiKEY"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:paddingEnd="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="1dp"
        android:paddingStart="10dp"
        android:textColor="@color/common_text"
        android:textColorHint="@color/common_text_grey"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_common_frame_white"
            android:text="@android:string/cancel"
            android:textColor="@color/common_text"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/btn_common_blue_selector"
            android:text="@android:string/ok"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>
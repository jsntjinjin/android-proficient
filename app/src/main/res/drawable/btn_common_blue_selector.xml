<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 不可用时 -->
    <item android:drawable="@drawable/shape_dialog_btn_bg_unpressed" android:state_enabled="false" />
    <!-- 按压时 -->
    <item android:drawable="@drawable/shape_dialog_btn_bg_pressed" android:state_pressed="true" />
    <!-- 被选中时 -->
    <item android:drawable="@drawable/shape_dialog_btn_bg_pressed" android:state_selected="true" />
    <!-- 默认时 -->
    <item android:drawable="@drawable/shape_dialog_btn_bg_normal" />
</selector>